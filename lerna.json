{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "applications/*"
  ],
  "workspaces": [
    "packages/*",
    "applications/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": [
        "feature/*",
        "feat/*",
        "bugfix/*",
        "hotfix/*",
        "improvement/*",
        "improv/*"
      ]
    }
  }
}
