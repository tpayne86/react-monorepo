{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": [
        "feature/*",
        "feat/*",
        "bugfix/*",
        "hotfix/*",
        "improvement/*",
        "improv/*"
      ],
      "message": "chore(release): publish %s"
    }
  }
}
